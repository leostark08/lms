<style>
    .item {
        background-color: #FFF8E5;
        padding: 15px;
        border-radius: 10px;
        margin: 10px 0;
    }
    .item__header .title {
        font-size: 18px;
        font-weight: bold;
        color: #112031;
    }
    .item__header .short-info {
        margin-right: 20px;
    }
    .item__header .short-info i,
    .item__header .short-info a {
        color: #00A19D;
        font-size: 15px;
    }
    .item__body .content {
        color: #112031;
    }
    .btn-icon {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: transparent;
        padding: 5px;
        border-radius: 5px;
        min-width: 36px;
        min-height: 36px;
        border: 1px solid #fff;
    }
    .btn-icon i {
        color: #fff;
        font-size: 20px;
    }
    {{! danger button }}
    .btn-danger {
        border: solid 1px #E05D5D;
    }
    .btn-danger i {
        color: #E05D5D;
    }
    .btn-danger:hover{
        background-color: #E05D5D;
        transition: ease 0.3s;
    }
    .btn-danger:hover > i{
        color: #fff;
        transition: ease 0.3s;
    }
    .btn-danger.active {
        background-color: #E05D5D;
    }
    .btn-danger.active > i {
        color: #fff;
    }
    {{! end danger button }}

    {{! warning button}}
    .btn-warning {
        border: solid 1px #FFB344;
    }
    .btn-warning i {
        color: #FFB344;
    }
    .btn-warning:hover{
        background-color: #FFB344;
        transition: ease 0.3s;
    }
    .btn-warning:hover > i{
        color: #fff;
        transition: ease 0.3s;
    }
    .btn-warning.active {
        background-color: #FFB344;
    }
    .btn-warning.active > span,
    .btn-warning.active > i {
        color: #fff;
    }
    {{! end warning button }}
    .item__body .btn-icon {
        margin: 0 3px;
    }
</style>
