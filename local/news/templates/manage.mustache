<div class="d-flex flex-row-reverse">
<input type="button" class="btn btn-primary" value="Create" onclick="location.href='{{createurl}}'"/>
</div>
<div class="news-items" id="news-group">
    {{#newsdata}}
    <div class="item">
        <div class="item__header" id="heading1">
            <div class="row">
                <div class="col-lg-11">
                    <a class="title" data-toggle="collapse" href="#collapse{{id}}" role="button" aria-expanded="true"
                       aria-controls="collapseExample">
                        {{title}}
                    </a></div>
                <div class="col-lg-1 d-flex flex-row-reverse">
                    <button type="button" class="btn-icon btn-danger btn-bookmark active"><i class="fa fa-bookmark-o" aria-hidden="true"></i></button>
                </div>
            </div>

            <div class="d-flex flex-row">
                <div class="short-info"><i class="fa fa-copyright" aria-hidden="true"></i> <a href="#">author</a></div>
                <div class="short-info"><i class="fa fa-clock-o" aria-hidden="true"></i> <a href="#">{{timecreated}}</a></div>
            </div>
        </div>
        <div class="item__body collapse" id="collapse{{id}}" aria-labelledby="heading1" data-parent="#news-group">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex flex-row-reverse">
                        <button type="button" class="btn-icon btn-warning btn-share"><i class="fa fa-2x fa-share-alt" aria-hidden="true"></i></button>
                        <button type="button" class="btn-icon btn-warning btn-star active"><i class="fa fa-2x fa-star-o" aria-hidden="true"></i><span>&nbsp;(174)</span></button>
                    </div>
                </div>
            </div>
            <div class="content">
                {{content}}
            </div>
        </div>
    </div>
    {{/newsdata}}
</div>

